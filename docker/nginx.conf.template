server {
    listen ${PORT};
    server_name localhost;
    gzip on;
    gzip_types      text/plain application/x-javascript text/xml text/css application/xml;
    gzip_proxied    any;
    gzip_comp_level 5;
    gzip_min_length 150;
    gzip_vary       on;

    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
    }
}
